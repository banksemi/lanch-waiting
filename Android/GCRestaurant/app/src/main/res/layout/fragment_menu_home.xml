<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rest_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/restaurant2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rest_recommend_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jua_ttf"
        android:text="추천식당"
        android:textColor="#44546A"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/rest_recommend"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="#6F6F6F"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintLeft_toRightOf="@+id/rest_recommend_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/parentR"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rest_recommend_text">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/res1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/hannah"
                android:text="태평돈까스"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/res1_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/hannah"
                android:text="대기시간 : 10분"
                android:textSize="18dp" />

            <View
                android:id="@+id/res1_line"
                android:layout_width="385dp"
                android:layout_height="2dp"
                android:layout_below="@id/res1"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="8dp"
                android:background="#D0CECE" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r1">

            <TextView
                android:id="@+id/res2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/hannah"
                android:text="오늘오면"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/res2_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="19dp"
                android:fontFamily="@font/hannah"
                android:text="대기시간 : 5분"
                android:textSize="18dp" />

            <View
                android:id="@+id/res2_line"
                android:layout_width="385dp"
                android:layout_height="2dp"
                android:layout_below="@id/res2"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="8dp"
                android:background="#D0CECE" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r2">

            <TextView
                android:id="@+id/res3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/hannah"
                android:text="쩡이네 분식"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/res3_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/hannah"
                android:text="대기시간 : 5분"
                android:textSize="18dp" />

            <View
                android:id="@+id/res3_line"
                android:layout_width="385dp"
                android:layout_height="2dp"
                android:layout_below="@id/res3"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="8dp"
                android:background="#D0CECE" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r3">

            <TextView
                android:id="@+id/res4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                android:fontFamily="@font/hannah"
                android:text="준호네 부대찌개"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/res4_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="21dp"
                android:fontFamily="@font/hannah"
                android:text="대기시간 : 8분"
                android:textSize="18dp" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="236dp"
        android:background="#FFF"
        android:src="@drawable/timerstart5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parentR" />

    <ImageButton
        android:id="@+id/time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="16dp"
        android:background="#FFF"
        android:src="@drawable/timerend5"
        app:layout_constraintLeft_toRightOf="@id/time_start"
        app:layout_constraintTop_toBottomOf="@id/parentR" />

    <ImageView
        android:id="@+id/new_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/newanswer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_start" />

    <TextView
        android:id="@+id/new_answertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="280dp"
        android:fontFamily="@font/jua_ttf"
        android:text="최근댓글"
        android:textColor="#44546A"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_start" />

    <RelativeLayout
        android:id="@+id/new_answer_parent"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:background="@drawable/boundary2"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_answer">

        <TextView
            android:id="@+id/answer1"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hannah"
            android:text="안녕하세요!"
            android:textSize="18dp" />

        <View
            android:id="@+id/answer1_line"
            android:layout_width="385dp"
            android:layout_height="2dp"
            android:layout_below="@id/answer1"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="8dp"
            android:background="#D0CECE" />

        <TextView
            android:id="@+id/answer2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/hannah"
            android:text="제가 지금 태돈앞에 있는데 6팀 정도 있어요 기다리면 30분정도 걸릴거같은데"
            android:textSize="18dp" />

        <View
            android:id="@+id/answer2_line"
            android:layout_width="385dp"
            android:layout_height="2dp"
            android:layout_below="@id/answer2"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="8dp"
            android:background="#D0CECE" />

        <TextView
            android:id="@+id/answer3"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer2_line"
            android:layout_alignParentRight="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/hannah"
            android:text="지금 오늘오면 줄 없습니다~~"
            android:textSize="18dp" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:background="#FFFF"
        android:src="@drawable/dutchpay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_answer_parent" />

</android.support.constraint.ConstraintLayout>